public class Solution {
    public int addDigits(int num) {
        String s = String.valueOf(num);
        if(s.length() > 1){
            int n = 0;
            for(int i=0; i<s.length(); i++){
                n += Integer.parseInt(String.valueOf(s.charAt(i)));
            }
            return addDigits(n);
        }
        else{
            return Integer.parseInt(s);
        }
    }
}
